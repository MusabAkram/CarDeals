<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<RelativeLayout
    android:id="@+id/activity_ad_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saad.carsales.AD_details"
    android:background="#eaeaea"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:id="@+id/images">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/plus"
            android:id="@+id/img1"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/plus"
            android:id="@+id/img2"
            android:layout_toEndOf="@+id/img1"/>
        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/plus"
            android:id="@+id/img3"
            android:layout_toEndOf="@+id/img2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Add Photos     "

            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_below="@+id/img1"
            android:layout_toEndOf="@+id/img1"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>

    <TextView
        android:id="@+id/details_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/images"
        android:text="CAR DETAILS"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/car_model"
        android:layout_below="@+id/details_text"
        android:layout_marginTop="30dp"
        android:hint="Model"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"
        android:elegantTextHeight="false"
        android:ellipsize="start"
        android:textAlignment="center" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/model_year"
        android:layout_below="@+id/car_model"
        android:layout_marginTop="25dp"
        android:hint="Model Year"
        android:textAlignment="center"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/Reg_city"
        android:layout_below="@+id/model_year"
        android:layout_marginTop="25dp"
        android:hint="Registration City"
        android:textAlignment="center"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/mileage"
        android:layout_below="@+id/Reg_city"
        android:layout_marginTop="25dp"
        android:hint="Mileage"
        android:textAlignment="center"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/Eng_cap"
        android:layout_below="@+id/mileage"
        android:layout_marginTop="25dp"
        android:hint="Engine Capacity"
        android:textAlignment="center"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/body_color"
        android:layout_below="@+id/Eng_cap"
        android:layout_marginTop="25dp"
        android:hint="Body Color"
        android:textAlignment="center"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/Price"
        android:layout_below="@+id/body_color"
        android:layout_marginTop="25dp"
        android:hint="Price"
        android:textAlignment="center"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>
    <Button

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/location"
        android:layout_below="@+id/Price"
        android:layout_marginTop="25dp"
        android:text="Add Location"
        android:textAlignment="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:background="@color/primarypurple"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/personal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:text="PERSONAL INFO"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="25dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/name"
        android:layout_below="@+id/personal_text"
        android:layout_marginTop="25dp"
        android:hint="Name"
        android:textAlignment="center"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/contact"
        android:layout_below="@+id/name"
        android:layout_marginTop="25dp"
        android:hint="Contact"
        android:textAlignment="center"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/seller_address"
        android:layout_below="@+id/contact"
        android:layout_marginTop="25dp"
        android:hint="Address"
        android:textAlignment="center"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/details_done"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="DONE"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@color/primarypurple"
        android:elevation="6dp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/seller_address"/>
</RelativeLayout>

</ScrollView>
