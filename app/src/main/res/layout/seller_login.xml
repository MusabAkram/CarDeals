<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/seller_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saad.carsales.Signup_Form">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="33dp"
        android:id="@+id/s_mail"
        android:hint="Email"
        android:selectAllOnFocus="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/s_mail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:id="@+id/s_name"
        android:layout_alignParentEnd="true"
        android:hint="Name"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/s_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/s_pass"
        android:layout_alignParentEnd="true"
        android:hint="Password"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/s_pass"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/s_c_pass"
        android:layout_alignParentEnd="true"
        android:hint="Confirm Password"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/s_contact"
        android:hint="Contact"
        android:singleLine="true"
        android:layout_below="@+id/s_c_pass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <com.dx.dxloadingbutton.lib.LoadingButton
        android:id="@+id/btn_proceed"
        android:layout_gravity="center"
        app:lb_resetAfterFailed="true"
        app:lb_btnRippleColor="#000000"
        app:lb_btnColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:layout_marginTop="40dp"
        app:lb_textColor="@android:color/white"
        app:lb_btnText="Proceed"
        android:layout_width="300dp"
        android:layout_below="@+id/s_contact"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
